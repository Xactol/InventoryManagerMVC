@{
}



@using (Html.BeginForm("New", "Employee"))
{
   <div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name,@Model.Name, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Surname)
            @Html.TextBoxFor(m => m.Surname,@Model.Surname, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.City)
            @Html.TextBoxFor(m => m.City,@Model.City, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.ValidationMessageFor( m => m.Email) 
            @Html.TextBoxFor(m => m.Email,@Model.Email, new { @class = "form-control"})
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
  </div>
}